<% include layout/header %>
    <div class="row products flex-wrap mx-auto mt-5">

        <% products.forEach(function(p){ %>
            <div class="col-xs-12 col-md-4 mx-auto mt-5">
                <a class="pa" href="/products/<%= p.category %>/<%= p.slug %>">
                    <img class="pimage p-0 m-0" style="object-fit: cover;" src="/product_images/<%= p._id %>/<%= p.image %>" alt="">
                </a>
                <h4 class="text-center">
                    <%= p.title %>
                </h4>
                <h4>$<%= parseFloat(p.price).toFixed(2) %>
                </h4>
                <a class="vd" href="/products/<%= p.category %>/<%= p.slug %>">View Details</a>
            </div>
            <% }); %>

    </div>

    <% include layout/footer %>