<% include layout/header %>

    <div class="row products flex-wrap mt-5">

        <% products.forEach(function(p){ %>
            <div class="col-xs-12 col-md-4 p card p-0 mx-auto">
                <div class="card-body">
                <a class="pa" href="/products/<%= p.category %>/<%= p.slug %>">
                    <img class="pimage" src="/product_images/<%= p._id %>/<%= p.image %>" alt="">
                </a>
            </div>
                <div class="card-footer">
                <h4>
                    <%= p.title %>
                </h4>
                <h4>$<%= parseFloat(p.price).toFixed(2) %>
                </h4>
                <a href="/products/<%= p.category %>/<%= p.slug %>">View Details</a>
            </div>
            </div>
            <% }); %>

    </div>

    <% include layout/footer %>